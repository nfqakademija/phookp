{% extends 'base.html.twig' %}
{% block title %}Results{{ parent() }}{% endblock %}
{% block body %}
    <div class="container container-index">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="card mt-4 card-shadow">
                    <div class="card-body">
                        <h3 class="card-title justify-content-center">Sektorių pridėjimas</h3>
                        <div class="form">
                            <div class="row justify-content-center">
                                <div class="col-4">
                                    <h5> Komanda</h5>
                                </div>
                                <div class="col-4">
                                    <h5>Sektorius</h5>
                                </div>
                            </div>
                            {% for value in event %}
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                <div class="row justify-content-center">
                                    <div class="col-4">{{ value["commandName"] }}</div>
                                    <div class="col-4">{{ form_row(form.sectorId[loop.index0]) }}</div>
                                </div>
                            {% endfor %}
                            {{ form_widget(form.save) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}