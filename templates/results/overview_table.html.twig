{% include "results/modals/results_mobile.html.twig" %}
<div class="container">
    <div class="row d-flex flex-md-row justify-content-center">

            <table class="mdl-data-table">
                <tbody>
                <tr>
                    <td class="u-bg-main u-text-white">Didžiausia žuvis</td>
                    <td class="u-text-bold"> {{ results['bigFish']['weigh'] }}kg</td>
                </tr>
                <tr>
                    <td class="u-bg-main u-text-white">Didžiausią žuvį pagavo</td>
                    <td class="u-text-bold">{{ results['bigFish']['team'] }}</td>
                </tr>
                <tr>
                    <td class="u-bg-main u-text-white">Bendras žuvų svoris</td>
                    <td class="u-text-bold"> {{ results['totalWeigh'] }}kg </td>
                </tr>
                <tr>
                    <td class="u-bg-main u-text-white">Bendras žuvų skaičius</td>
                    <td class="u-text-bold"> {{ results['totalCount'] }}vnt. </td>
                </tr>
                </tbody>
            </table>

            <table class="mdl-data-table">
                <thead class="table-head text-white u-font-13 u-text-bold">
                <tr class="">
                    <th scope="col" class="text-white p-0 text-center">
                        Vieta
                    </th>
                    <th scope="col" class="text-white p-0 text-center">
                        Sektorius
                    </th>
                    <th scope="col" class="text-white p-0 text-center">
                        Komanda
                    </th>
                    <th scope="col" class="text-white p-0 text-center">
                        Bendras svoris
                    </th>
                </tr>
                </thead>
                <tbody class="u-font-13">
                {% for result in results['teamResults']|slice(0,3) %}
                    <tr>
                        <td class="p-1 text-center">
                            {{ loop.index }}
                        </td>
                        <td class="p-1 text-center">
                            {{ result['team'].sectorNr }}
                        </td>
                        <td class="p-1 text-center">
                            {{ result['team'].teamName }}
                        </td class="p-1 text-center">
                        <td class="u-text-bold">
                            {{ result['totalWeigh'] }}kg
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    </div>
</div>