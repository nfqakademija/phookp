{% extends 'base.html.twig' %}

{% block title %}Rezultatai {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-name-container">
        <h2>Renginio {{ competition.CompetitionName}} rezultatai</h2>
    </div>
    <div class="container mt-5 ">

        <div class="row d-flex flex-md-row justify-content-center">
            <div class="card info-card p-3">
                <div class="card-body">
                    <h4 class="card-title">Big fish <i class="fa fa-fish"></i></h4>
                    <p class="card-text">
                        Didžiausia žuvis:<i
                                class="u-text-bold"> {{ results['bigFish']['weigh'] }}kg</i>
                    <p class="card-text"> Didžiausią žuvį pagavo: <i
                                class="u-text-bold">{{ results['bigFish']['team'] }}</i></p>
                    <p class="card-text"> Bendras žuvų svoris: <i
                                class="u-text-bold">{{ results['totalWeigh'] }}kg</i></p>
                    <p class="card-text"> Bendras žuvų skaičius: <i
                                class="u-text-bold">{{ results['totalCount'] }}vnt.</i></p>
                </div>
            </div>
            <div class="card info-card p-3">
                <div class="card-body">
                    <h4 class="card-title">Top 3</h4>
                    <div class="row">
                        <div class="col">
                            <p class="card-text">Vieta</p>
                        </div>
                        <div class="col">
                            <p class="card-text">
                                Komanda
                            </p>
                        </div>
                        <div class="col">
                            <p class="card-text">
                                Svoris kg
                            </p>

                        </div>
                    </div>
                    {% for result in results['teamResults']|slice(0,3) %}
                        <div class="row">
                            <div class="col">
                                <p class="card-text">{{ loop.index }}</p>
                            </div>
                            <div class="col">
                                <p class="card-text">
                                    {{ result['team'].teamName }}
                                </p>
                            </div>
                            <div class="col">
                                <p class="card-text">
                                    {{ result['totalWeigh'] }}
                                </p>

                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>

        </div>

        <div class="row table-container mb-5">
            <div class="table-responsive-md">
            <table class="mdl-data-table mx-auto">
                <thead class="thead-primary">
                <tr class="tr--border-bottom--white d-none d-md-table-row">
                    <th colspan="3"></th>
                    {% for w in 0..competition.CompetitionWeighingsCount-1 %}
                        <th colspan="2" scope="col" class="mdl-data-table__cell--non-numeric th--border--white text-center">
                            Svėrimas #{{ w+1 }}
                        </th>
                    {% endfor %}
                    <th></th>
                    <th></th>
                </tr>
                <tr class="table-head">
                    <th scope="col"  class="mdl-data-table__cell--non-numeric">
                        Vieta
                    </th>
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Sektorius
                    </th>
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Komanda
                    </th>
                    {% for w in 0..competition.CompetitionWeighingsCount-1 %}
                        <th scope="col" class="mdl-data-table__cell--non-numeric d-none d-md-table-cell">
                           Svoris kg
                        </th>
                        <th scope="col" class="d-none d-md-table-cell">
                            Vnt.
                        </th>
                    {% endfor %}
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Bendras svoris
                    </th>
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Iš viso žuvų
                    </th>
                </tr>
                </thead>
                <tbody>
                    {% for result in results['teamResults'] %}
                        <tr data-results-total="{{ result['weighings']|json_encode }}" data-team-name="{{ result['team'].teamName }}" class="results-accessor">
                            <td>
                                {{ loop.index }}
                            </td>
                            <td>
                                {{ result['team'].sectorNr }}
                            </td>
                            <td>
                                {{ result['team'].teamName }}
                            </td>
                            {% for w in 0..competition.CompetitionWeighingsCount-1 %}
                                <td class="d-none d-md-table-cell">
                                    {% if result['weighings'][w] is defined %}
                                        {{ result['weighings'][w]['totalWeigh']}}kg
                                    {% endif %}
                                </td>
                                <td class="d-none d-md-table-cell">
                                    {% if result['weighings'][w] is defined %}
                                        {{ result['weighings'][w]['fishCount'] }}
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td class="u-text-bold">
                                {{ result['totalWeigh'] }}kg
                            </td>
                            <td class="u-text-bold">
                                {{ result['totalCount'] }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>

    </div>
    <script src="{{ asset('build/js/results.js') }}"></script>
{% endblock %}
