{% extends 'base.html.twig' %}

{% block title %}Rezultatai {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-name-container">
        <h2>Renginio {{ competition.CompetitionName}} rezultatai</h2>
    </div>
    <div class="container mt-5 ">
        <div class="row justify-content-start mb-3 mt-3 d-flex justify-content-center">
            <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
                <tbody>
                <tr>
                    <td class="u-bg-main u-text-white">Didžiausia žuvis</td>
                    <td class="u-text-bold"> {{ results['bigFish']['weigh']/1000 }}kg</td>
                </tr>
                <tr>
                    <td class="u-bg-main u-text-white">Didžiausią žuvį pagavo</td>
                    <td class="u-text-bold">{{ results['bigFish']['team'] }}</td>
                </tr>
                <tr>
                    <td class="u-bg-main u-text-white">Bendras žuvų svoris</td>
                    <td class="u-text-bold"> {{ results['totalWeigh']/1000 }}kg </td>
                </tr>
                <tr>
                    <td class="u-bg-main u-text-white">Bendras žuvų skaičius</td>
                    <td class="u-text-bold"> {{ results['totalCount'] }}vnt. </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="row table-container mb-5">
            <div class="teble-responsive table-container">
            <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
                <thead class="thead-primary">
                <tr class="tr--border-bottom--white ">
                    <th colspan="3"></th>
                    {% for w in 0..competition.CompetitionWeighingsCount-1 %}
                        <th colspan="2" scope="col" class="mdl-data-table__cell--non-numeric th--border--white text-center">
                            Svėrimas #{{ w+1 }}
                        </th>
                    {% endfor %}
                    <th></th>
                    <th></th>
                </tr>
                <tr class="table-head">
                    <th scope="col"  class="mdl-data-table__cell--non-numeric">
                        Vieta
                    </th>
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Sektorius
                    </th>
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Komanda
                    </th>
                    {% for w in 0..competition.CompetitionWeighingsCount-1 %}
                        <th scope="col" class="mdl-data-table__cell--non-numeric">
                           Svoris kg
                        </th>
                        <th scope="col">
                            Vnt.
                        </th>
                    {% endfor %}
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Bendras svoris
                    </th>
                    <th scope="col" class="mdl-data-table__cell--non-numeric">
                        Iš viso žuvų
                    </th>
                </tr>
                </thead>
                <tbody>
                    {% for result in results['teamResults'] %}
                        <tr>
                            <td>
                                {{ loop.index }}
                            </td>
                            <td>
                                {{ result['team'].sectorNr }}
                            </td>
                            <td>
                                {{ result['team'].teamName }}
                            </td>
                            {% for w in 0..competition.CompetitionWeighingsCount-1 %}
                                <td>
                                    {% if result['weighings'][w] is defined %}
                                        {{ result['weighings'][w]['totalWeigh']/1000}}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if result['weighings'][w] is defined %}
                                        {{ result['weighings'][w]['fishCount'] }}
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td class="u-text-bold">
                                {{ result['totalWeigh']/1000 }}
                            </td>
                            <td class="u-text-bold">
                                {{ result['totalCount'] }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>

    </div>
{% endblock %}
