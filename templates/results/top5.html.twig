{% extends 'base.html.twig' %}

{% block title %}Rezultatai {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-name-container">
        <h2>Renginio {{ competition.CompetitionName}} rezultatai</h2>
    </div>
    <div class="container mt-5 ">

        <div class="event-info-container u-mt-minus  d-flex justify-content-between flex-wrap">
            <div class="card info-card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-text">  </p>
                    <p class="card-text"></p>
                    <div class="card-button-container d-flex justify-content-center">
                        {#<a href="">Facebook nuoroda čia!</a>#}
                    </div>
                </div>
            </div>
            <div class="card info-card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-text">  </p>
                    <p class="card-text"></p>
                    <div class="card-button-container d-flex justify-content-center">
                        {#<a href="">Facebook nuoroda čia!</a>#}
                    </div>
                </div>
            </div>

        </div>



        {% include "results/overview_table.html.twig" %}
        <div class="row table-container mb-5">
            <div class="table-responsive-md">
                <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp mx-auto">
                    <thead class="thead-primary">
                    <tr class="table-head">
                        <th scope="col"  class="mdl-data-table__cell--non-numeric">
                            Vieta
                        </th>
                        <th scope="col" class="mdl-data-table__cell--non-numeric">
                            Sektorius
                        </th>
                        <th scope="col" class="mdl-data-table__cell--non-numeric">
                            Komanda
                        </th>
                        {% for w in 0..4 %}
                            <th scope="col" class="mdl-data-table__cell--non-numeric d-none d-md-table-cell">
                                TOP {{ loop.index }}
                            </th>
                        {% endfor %}
                        <th scope="col" class="mdl-data-table__cell--non-numeric">
                            Bendras svoris
                        </th>
                        {#<th scope="col" class="mdl-data-table__cell--non-numeric">
                            Iš viso žuvų
                        </th>#}
                    </tr>
                    </thead>
                    <tbody>
                    {% for result in results['teamResults'] %}
                        <tr data-results-top5="{{ result['top5']|json_encode }}" data-team-name="{{ result['team'].teamName }}" class="results-accessor">
                            <td>
                                {{ loop.index }}
                            </td>
                            <td>
                                {{ result['team'].sectorNr }}
                            </td>
                            <td class="text-left">
                                {{ result['team'].teamName }}
                            </td>
                            {% for w in 0..4 %}
                                <td class="d-none d-md-table-cell">
                                    {% if result['top5'][w] is defined %}
                                        {{ result['top5'][w]}}kg
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td class="u-text-bold">
                                {{ result['totalWeigh'] }}kg
                            </td>
                            {#<td class="u-text-bold">
                                {{ result['totalCount'] }}
                            </td>#}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <script src="{{ asset('build/js/results.js') }}"></script>
{% endblock %}
