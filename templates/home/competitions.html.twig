{% extends 'base.html.twig' %}

{% block title %}Renginiai {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-name-container">
        <h2>Renginiai</h2>
    </div>
    {#praeje#}
    {#{%for competition in expiredCompetitions %}#}
    {#pavadinimas: {{ competition['name'] }}#}
        {#<br>#}
    {#vyksta {{ competition['startDate'] }} - {{ competition ['finishDate'] }}#}
        {#<br>#}
    {#{% endfor %}#}

    {#busimi#}
    {#{% for competition in futureCompetitions %}#}

    {#pavadinimas: {{ competition['name'] }}#}
        {#<br>#}
    {#vyksta {{ competition['startDate'] }} - {{ competition['finishDate'] }}#}
        {#<br>#}
    {#{% endfor %}#}
    <section id="previous-events" class=" u-pb-5">
        <div class="container">
            <h2 class="heading heading--blue-border heading--center">Būsimi renginiai</h2>
            <div class="row">
                <div class="event-card-container d-flex justify-content-center flex-wrap">
                    {% if futureCompetitions != null %}
                    {% for competition in futureCompetitions %}
                    <div class="card">
                        <img class="card-img-top" src=" {{ asset('images/fishing_example.jpeg') }}" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <h4 class="card-title">{{ competition['name'] }}</h4>
                            <p class="card-text"><i class="fa fa-calendar-alt"></i> {{ competition['startDate'] }}</p>
                            <p class="card-text"><i class="fa fa-map-marker-alt"></i> Pikaiciai, Alytus</p>
                            <div class="card-button-container d-flex justify-content-center">
                                <a href="#" class="btn button btn-primary">Rezultatai</a>
                            </div>                        </div>
                    </div>
                    {% endfor %}
                    {% else %}
                        Šiuo metu būsimų renginių nėra
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <section id="previous-events" class=" u-pb-5">
        <div class="container">
            <h2 class="heading heading--blue-border heading--center">Praėję renginiai</h2>
            <div class="row">
                <div class="event-card-container d-flex justify-content-center flex-wrap">
                    {% for competition in expiredCompetitions %}
                    <div class="card">
                        <img class="card-img-top" src=" {{ asset('images/fishing_example.jpeg') }}" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <h4 class="card-title">{{ competition['name'] }}</h4>
                            <p class="card-text"><i class="fa fa-calendar-alt"></i>{{ competition['startDate'] }} - {{ competition['finishDate'] }}</p>
                            {% if competition['location']!=null %}
                            <p class="card-text"><i class="fa fa-map-marker-alt"></i>{{ competition['location'] }}</p>
                            {% endif %}
                            <div class="card-button-container d-flex justify-content-center">
                                <a href="/results/{{ competition['id'] }}" class="btn button btn-primary">Rezultatai</a>
                                <br>
                                {% if competition['link']!= null %}
                                <a href="{{ competition['link'] }}" class="btn button btn-primary">Facebook nuoroda čia!</a>
                                {% endif %}
                            </div>                        </div>

                </div>
                    {% endfor %}
            </div>
        </div>
    </section>





{% endblock %}