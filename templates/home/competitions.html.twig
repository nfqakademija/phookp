{% extends 'base.html.twig' %}
{% import 'macro/index.macro.html.twig' as myMacros %}
{% block title %}Renginiai{% endblock %}
{% set picture = 0 %}
{% set rules = 1 %}
{% set futureCompetition=0 %}
{% block body %}
    <div class="page-name-container">
        <h2>Varžybos</h2>
    </div>
    <section id="previous-events" class=" u-pb-5">
        <div class="container">
            <h2 class="heading heading--blue-border heading--center">Būsimos varžybos</h2>
            <div class="row">
                {% if futureCompetitions != null %}
                    {% set futureCompetition=1 %}
                    <div class="offset-lg-2 col-lg-8 px-0 event">
                    {% for competition in futureCompetitions %}
                        {{ myMacros.printCompetitions(
                            futureCompetitions,
                            picture,
                            futureCompetition,
                            rules
                        ) }}
                    {% endfor %}
                </div>
            {% else %}
                <div class=" event d-flex justify-content-center align-items-center">
                    <h6>Šiuo metu būsimų varžybų nėra.</h6>
                </div>
                {% endif %}
            </div>
        </div>
    </section>

    <section id="previous-events" class=" u-pb-5">
        <div class="container">
            <h2 class="heading heading--blue-border heading--center" id="competitions">Praėjusios varžybos</h2>
            <div class="row">
                <div class="col-lg-2">
                    <div class="list-group d-none d-sm-block px-0 ">
                        {% for years in expiredCompetitionsYears %}
                            <h2><a href="/home/competitions/{{ years['years'] }}#competitions"
                                   class="list-group-item u-bg-main-text">{{ years['years'] }}</a>
                            </h2>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-8 px-0">
                    <div class="event">
                        {{ myMacros.printCompetitions(
                            expiredCompetitions,
                            picture,
                            futureCompetition,
                            rules
                        ) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}