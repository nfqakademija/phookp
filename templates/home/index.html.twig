{% extends 'base.html.twig' %}

{% block title %}PHookP{{ parent() }}{% endblock %}

{% block body %}
    {{ include ("home/navBar.html.twig") }}
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1 text-white">PHookP <br> <i class="fas fa-fish"></i></h1>
            <h3 class="mb-5 text-white">
                <em> Čia galite registruoti savo ..... </em>
            </h3>
        </div>
        <div class="overlay"></div>
    </header>
    <div class="container container-index">
        <div class="row">
            <div class="col-lg-10">
                <div class="card mt-4 card-shadow">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="{{ asset("images/karpis5.jpg") }}" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ asset("images/karpis7.jpg") }}" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ asset("images/sektoriai.jpg") }}" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Praeitas</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Sekantis</span>
                        </a>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">
                            Apie mus
                        </h3>
                        <p class="card-text">Tai ....</p>
                    </div>
                </div>
                <div class="card my-4 card-shadow">
                    <div class="card-body">
                        <h4 class="card-title text-truncate">Vykstantys renginiai:</h4>
                        {% for event in events %}
                            <h5 class="card-subtitle mb-2 text-muted">{{ event["event_name"] }}</h5>
                            <a href="/home/event/{{ event["id_event"] }}" class="card-link">Rezultatai</a>
                            <br>
                            <small class="text-muted">Data: {{ event["event_date"] }}</small>
                            <hr>
                        {% endfor %}
                    </div>
                </div>
                <div class="card my-4 card-shadow">
                    <div class="card-body">
                        <h4 class="card-title text-truncate">Būsimi renginiai: </h4>
                        {% for event in events %}
                            <h5 class="card-subtitle mb-2 text-muted">{{ event["event_name"] }}</h5>
                            <small class="text-muted">Data: {{ event["event_date"] }}</small>
                            <hr>
                        {% endfor %}
                    </div>
                </div>
                <div class="card my-4 card-shadow">
                    <div class="card-body">
                        <h4 class="card-title text-truncate">Pasibaigę renginiai: </h4>
                        {% for event in events %}
                            <h5 class="card-subtitle mb-2 text-muted">{{ event["event_name"] }}</h5>
                            <a href="/home/event/{{ event["id_event"] }}" class="text-secondary">Rezultatai</a>
                            <br>
                            <small class="text-muted">Data: {{ event["event_date"] }}</small>
                            <hr>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}