{% extends 'homepage_base.html.twig' %}

{% block title %}Sportinė karpių žuklė{{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid home-start">


        <div class="row">
            <div class="home-left-side col-lg-6 col-sm-12">
                {% include "navBar/navBar.html.twig" %}
                <div class="start-right-side-wrapper d-flex flex-column ">
                    <h1 class="heading heading--blue-border ">Sportinė karpių žuklė</h1>

                    <div class="event mt-5 mb-5">
                        <h3 class="event__heading heading--grey">Šiuo metu vyksta:</h3>
                        {% for competition in goingCompetitions %}
                        <h2 class="event__name">{{ competition["name"] }}</h2>
                        <div class="event__place">
                            <i class="fa  fa-map-marker-alt"></i> <span class="ml-2">Kauno Marios</span>
                        </div>
                        <div class="event__date"><i class="fa fa-calendar-alt"></i> <span
                                    class="ml-2">{{ competition["startDate"] }} {{ competition['finishDate'] }}</span>
                        </div>
                    </div>
                    <button class="button button__blue-transparent">Varžybų rezultatai</button>
                    {% endfor %}
                </div>
            </div>
            <div class="home-right-side col-lg-6 col-sm-12 .d-sm-none .d-md-block">

            </div>
        </div>
    </div>
    <div id="About-us" class="container-fluid pt-3 pb-3">
