{% extends 'base.html.twig' %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
            font-weight: 100;
            font-family: 'Lato';
        }

        .title {
            margin: 20px auto;
            text-align: center;
            font-size: 96px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header text-center h4 bg-dark">
            <span class="text-light">NFQ Akademijos projektas</span>
        </div>
        <div class="card-body pa-5">
            <div class="alert bg-warning">
                Hooray, first twigggg page!
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <div class="container-fluid bg-warning d-flex justify-content-center">
        <div class="text-dark">
            There goes footer. Made by PHookP &copy; 2018 NFQ Akademija
        </div>
    </div>
{% endblock %}